<h1>New product</h1>

<%= simple_form_for Product.new do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :choose_a_category %><br>
    <%= f.association :category, label_method: "#{:name_cat}", as: :radio_buttons %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<br/>
<%= link_to 'Back', products_path %>
